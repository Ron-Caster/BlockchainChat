{
  "name": "collab-net-server",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
  "start": "node dist/index.js",
  "bundle": "esbuild src/index.ts --bundle --platform=node --format=cjs --target=node18 --outfile=build/index.cjs",
  "pkg": "npm run bundle && pkg build/index.cjs --targets node18-win-x64 --output build/collab-server.exe"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "ws": "^8.17.0",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tsx": "^4.7.0",
  "esbuild": "^0.21.5",
  "pkg": "^5.8.1",
    "@types/node": "^20.11.30",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17"
  }
}
